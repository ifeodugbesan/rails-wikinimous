<div class="container">
  <div class="row">
    <div class="col-sm-8 col-sm-offset-2">
      <h1>Articles</h1>
      <% @articles.each do |article| %>
      <h2> <%= link_to article.title, article_path(article) %></h2>
      <p><%= article.content %> </p>
      <%= link_to 'Delete this Article', article_path(article), method: 'delete' %>
      <% end %>
    </div>
  </div>
</div>
